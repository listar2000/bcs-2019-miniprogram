/**app.wxss**/

page {
  height: 100%;
}

.bcs-wrap {
  position: relative;
  background: linear-gradient(45deg, #1557e4 0%, rgba(94, 120, 204, 0.9) 100%);
  transform: skewY(-6deg);
  transform-origin: 0;
  height: 500rpx;
  width: 100%;
  z-index: 1;
}

.bcs-wrap image {
  width: 100%;
  height: 100%;
  /* transform: skewY(-6deg);
  transform-origin: 0; */
  opacity: 0.1;
}

.bcs-text-container {
  width: 100%;
  position: absolute;
  justify-content: center;
  top: 70rpx;
  text-align: center;
  z-index: 3;
}

.bcs-title {
  color: white;
  font-weight: 200;
  font-size: 42px;
  font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
  position: relative;
  margin-bottom: 20px;
}

.bcs-subtitle {
  color: rgb(204, 193, 193);
  font-size: 20px;
  position: relative;
  margin-bottom: 30px;
}

.bcs-video {
  margin-top: 20px;
}

.bcs-info {
  color: #2b3486;
  font-size: 15px;
  font-family: avenir-lt-w01_35-light1475496,sans-serif;
  margin-bottom: 30px;
}

.bcs-btn-groups {
}

.bcs-btn {
  margin: 10px;
  font-family: avenir-lt-w01_35-light1475496,sans-serif;
}

.bcs-theme-text {
  font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
  font-weight: 200;
  color: #F57D14;
}